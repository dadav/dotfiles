font-2 = Unifont:size=11;2
font-3 = Wuncon Siji:pixelsize=11;3
font-4 = DejaVu Sans:pixelsize=11;2

modules-left = i3
modules-center = date
modules-right = mpd lock vpn filesystem memory dirtymem wlan eth battery0 battery1 temperature backlight pulseaudio

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/vpn]
type = custom/script
exec = echo VPN
exec-if = systemctl is-active 'vpn@*.service'
interval = 10
format-underline = #268bd2
format-prefix = "ïŠ‰ "

[module/lock]
type = custom/script
exec = test S = $(ps -o state= -p $(pgrep -x xautolock)) && echo ON
exec-if = pgrep -x xautolock
interval = 10
format-underline = #268bd2
format-prefix = "ï€£ "
#tail = true
#format-prefix-foreground = #5b

[module/xwindow]
