{
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "dockerfile": "hadolint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "snippets.snipmate.enable": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/ultis/snips",
  "python.pythonPath": "python3",
  "python.linting.lintOnSave": false,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.formatting.provider": "autopep8",
  "explorer.icon.enableNerdfont": true,
  "explorer.width": 30,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "i": "preview:labeling",
    "<cr>": ["expandable?", "expand", "open"],
    "<space>": "toggleSelection",
    "<bs>": "collapse",
    "oh": "open:split",
    "ov": "open:vsplit"
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
      "kubernetes": ["/deployment.y*ml", "/k8s-*.y*ml"],
      "chart": "/Chart.y*ml",
      "chart-lock": "/Chart.lock",
      "ansible-role-2.9": ["/handlers/*.y*ml", "/tasks/*.y*ml", "/main.y*ml"],
      "ansible-playbook": ["/playbooks/*.y*ml", "/site.y*ml", "/playbook.y*ml"],
      "ansible-inventory": ["/hosts", "/*servers*.y*ml"]
  }
}
